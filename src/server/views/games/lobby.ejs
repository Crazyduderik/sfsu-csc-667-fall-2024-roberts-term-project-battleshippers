<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Lobby</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #176c82;;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 200px auto;
            padding: 60px;
            background: rgb(220, 218, 218);
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .button {
            display: inline-block;
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #244c5a;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
        .button:hover {
            background-color: #0056b3;
        }
        .lobby-link {
            display: block;
            margin: 10px 0;
            padding: 10px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .lobby-link:hover {
            background-color: #1a9c37;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Game Lobby</h1>
        <button class="button" onclick="createLobby()">Create Lobby</button>
        <button class="button" onclick="joinLobby()">Join Lobby</button>
        <div id="lobbyList"></div>
    </div>

    <script>
        function createLobby() {
            const lobbyName = prompt("Enter name:");
            if (lobbyName) {
                const lobbyId = Math.floor(Math.random() * 10000);
                alert(`Lobby created! Your Lobby ID is: ${lobbyId}`);

                // Add lobby link to the page
                const lobbyList = document.getElementById("lobbyList");
                const lobbyLink = document.createElement("a");
                lobbyLink.href = `index2.html?lobbyId=${lobbyId}&lobbyyName=${encodeURIComponent(lobbyName)}`;
                lobbyLink.className = "lobby-link";
                lobbyLink.textContent = `Lobby ID: ${lobbyId} Lobby Name: ${lobbyName} (Click to Join)`;
                lobbyList.appendChild(lobbyLink);
            } else {
                alert("You must enter a name to create a lobby.");
            }
        }

        function joinLobby() {
            const lobbyId = prompt("Enter the Lobby ID to join:");
            const lobbyName = prompt("Enter lobby name:");
            if (lobbyId && lobbyName) {
                window.location.href = `index2.html?lobbyId=${lobbyId}&lobbyName=${encodeURIComponent(lobbyName)}`;
            } else {
                alert("You must enter both a Lobby ID and your name to join.");
            }
        }
    </script>
</body>
</html>